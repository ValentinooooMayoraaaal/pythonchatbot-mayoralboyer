#Créé la liste des noms des textes dans le module Speeches

def list_of_files(directory, extension):
    files_names = []
    for filename in os.listdir(directory):
        if filename.endswith(extension):
            files_names.append(filename)
    return files_names

#Affiche les noms des textes dans le module Speeches

print(list_of_files("Textes", ".txt"))
